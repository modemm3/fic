<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://jboss.org/schema/arquillian"
    xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
 
<group qualifier="glassfish_cluster" default="true">
    <container qualifier="remote" default="true">
        <configuration>
            <property name="adminPort">4848</property>
            <property name="adminHost">localhost</property>
            <property name="adminHttps">false</property>
            <property name="adminUser">admin</property>
            <property name="adminPassword">12345</property>
            <property name="target">server</property>
        </configuration>
    </container>
</group>
</arquillian>